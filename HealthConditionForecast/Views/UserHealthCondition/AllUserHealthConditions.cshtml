@model HealthConditionForecast.Models.UserHealthConditionList

@{
    ViewData["Title"] = "All User Health Conditions";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">🧑‍⚕️ All User Health Conditions</h1>
        <p class="lead">List of all users and their associated health conditions.</p>
    </div>

    <table id="userHealthConditionsTable" class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>User Name</th>
                <th>Health Condition</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.usernames.Count; i++)
            {
                <tr>
                    <td>@Model.usernames[i]</td>
                    <td>@Model.healthConditionNames[i]</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#userHealthConditionsTable').DataTable();
        });
    </script>
}
