@model List<string>
@{
    ViewData["Title"] = "Your Health Conditions";
    var username = ViewData["UserName"] as string;
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">🧑‍⚕️ Health Conditions for <span class="text-primary">@username</span></h1>
        <p class="lead">These are the health conditions currently associated with your profile.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <table id="healthConditionsTable" class="table table-bordered table-hover table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Health Condition Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var condition in Model)
                {
                    <tr>
                        <td>@condition</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            You have no health conditions assigned yet.
        </div>
    }
</div>

@section Scripts {
    <!-- Include DataTables JS and CSS if not already included -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#healthConditionsTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: false,
                pageLength: 5
            });
        });
    </script>
}
