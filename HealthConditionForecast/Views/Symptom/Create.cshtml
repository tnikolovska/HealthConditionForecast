@model HealthConditionForecast.Models.Symptom

@{
    ViewData["Title"] = "Create Symptom";
}

<h1>Create Symptom</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HealthConditionId"></label>
        <select asp-for="HealthConditionId" class="form-control" asp-items="ViewBag.HealthConditionId">
            <option value="">-- Select Health Condition --</option>
        </select>
        <span asp-validation-for="HealthConditionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="HealthCondition" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
