@model HealthConditionForecast.Models.UserSymptomSelection

@{
    ViewData["Title"] = "Select Symptoms";
    var uhcId = ViewData["UserHealthConditionId"];
}

<div class="container mt-5">
    <h1 class="mb-4">Select Symptoms for User Health Condition</h1>

    <form asp-action="Create" method="post" novalidate>
        <input type="hidden" name="UserHealthConditionId" value="@uhcId" />

        <div class="mb-4">
            <label class="form-label fw-semibold">Arthritis Symptoms</label>
            <select name="selectedArthritisSymptoms" multiple class="form-select" size="6">
                @foreach (var item in (MultiSelectList)ViewBag.ArthritisSymptoms)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Migraine Symptoms</label>
            <select name="selectedMigraineSymptoms" multiple class="form-select" size="6">
                @foreach (var item in (MultiSelectList)ViewBag.MigraineSymptoms)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Sinus Symptoms</label>
            <select name="selectedSinusSymptoms" multiple class="form-select" size="6">
                @foreach (var item in (MultiSelectList)ViewBag.SinusSymptoms)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                💾 Save Selection
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
