@model HealthConditionForecast.Models.Symptom

@{
    ViewData["Title"] = "Create Symptom";
}

<h1>Create Symptom</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="HealthConditionId" value="@ViewBag.HealthConditionId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="HealthCondition" asp-action="Details" asp-route-id="@ViewBag.HealthConditionId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
