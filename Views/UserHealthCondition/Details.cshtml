@model HealthConditionForecast.Models.UserHealthCondition

@{
    ViewData["Title"] = "Details";
}

<h1>User Health Condition Details</h1>

<div>
    <h4>UserHealthCondition</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>

        <dt class="col-sm-2">
            Health Condition ID
        </dt>
        <dd class="col-sm-10">
            @Model.HealthConditionId
        </dd>
    </dl>
</div>

<div>
     @if (User.IsInRole("User"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
