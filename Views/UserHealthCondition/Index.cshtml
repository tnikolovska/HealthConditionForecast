@model IEnumerable<HealthConditionForecast.Models.UserHealthCondition>

@{
    ViewData["Title"] = "User Health Conditions";
}

<div class="container mt-5">
    <h1 class="mb-4">User Health Conditions</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            ➕ Create New
        </a>
    </p>

    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>User ID</th>
                <th>Health Condition ID</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.HealthConditionId</td>
                    <td class="text-end">
                        @if (User.IsInRole("User"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                ✏️ Edit
                            </a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                            ℹ️ Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            🗑️ Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
