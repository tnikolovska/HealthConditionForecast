@model HealthConditionForecast.Models.MigraineSympton

@{
    ViewData["Title"] = "Create Migraine Symptom";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">➕ Create Migraine Symptom</h1>
        <p class="lead">Add a new migraine-related symptom to the system.</p>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label fw-bold"></label>
                    <select asp-for="Type" class="form-select" asp-items="@ViewBag.MigraineType">
                        <option value="">-- Select Symptom Type --</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HealthConditionId" class="form-label fw-bold"></label>
                    <select asp-for="HealthConditionId" asp-items="ViewBag.HealthConditionId" class="form-select">
                        <option value="">-- Select Health Condition --</option>
                    </select>
                    <span asp-validation-for="HealthConditionId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success btn-lg">✔️ Create</button>
                    <a asp-action="Index" asp-controller="HealthCondition" class="btn btn-outline-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
