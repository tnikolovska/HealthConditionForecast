@model HealthConditionForecast.Models.Forecast

@{
    ViewData["Title"] = "Delete Forecast";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-danger">🗑️ Delete Forecast</h1>
        <p class="lead">Are you sure you want to permanently delete this forecast entry?</p>
    </div>

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">📋 Forecast Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">📛 Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">📅 Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("dddd, MMMM d, yyyy")</dd>

                <dt class="col-sm-3 fw-bold">📊 Category</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark">@Model.Category</span>
                </dd>

                <dt class="col-sm-3 fw-bold">📈 Forecast Value</dt>
                <dd class="col-sm-9">@Model.Value</dd>

                <dt class="col-sm-3 fw-bold">🔗 Mobile Link</dt>
                <dd class="col-sm-9">
                    <a href="@Model.MobileLink" target="_blank" class="text-decoration-none">
                        📱 Open Mobile Link
                    </a>
                </dd>

                <dt class="col-sm-3 fw-bold">🌐 Web Link</dt>
                <dd class="col-sm-9">
                    <a href="@Model.Link" target="_blank" class="text-decoration-none">
                        🌍 Open Web Link
                    </a>
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center gap-3">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </div>
</div>
