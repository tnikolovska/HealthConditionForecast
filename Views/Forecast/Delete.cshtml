@model HealthConditionForecast.Models.Forecast

@{
    ViewData["Title"] = "Delete Forecast";
}

<h1>Delete Forecast</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Forecast</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Value</dt>
        <dd class="col-sm-10">@Model.Value</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
