@model IEnumerable<HealthConditionForecast.Models.Forecast>

@{
    ViewData["Title"] = "Forecasts";
}

<h1>Forecasts</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Forecast ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Value</th>
            <th>Category</th>
            <th>Category Value</th>
            <th>Mobile Link</th>
            <th>Link</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdForecast</td>
                <td>@item.Name</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Value</td>
                <td>@item.Category</td>
                <td>@item.CategoryValue</td>
                <td><a href="@item.MobileLink" target="_blank">Mobile</a></td>
                <td><a href="@item.Link" target="_blank">Web</a></td>
                <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                 }
                </td>
            </tr>
        }
    </tbody>
</table>
