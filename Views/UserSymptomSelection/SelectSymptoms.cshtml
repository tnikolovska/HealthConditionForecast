@{
    ViewData["Title"] = "Select Symptoms";
    var conditionType = ViewBag.ConditionType as string;
}

<h1>Select @conditionType Symptoms</h1>

<form method="post" asp-action="SelectSymptoms" asp-route-userHealthConditionId="@ViewData["userHealthConditionId"]">
    <div class="form-group">
        @if (conditionType == "Migraine")
        {
            <label>Select @conditionType Symptoms</label>
            
            <div>
                <label>Before Headache Symptoms</label>
                @foreach (var item in (MultiSelectList)ViewBag.BeforeHeadache)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedSymptoms"
                               value="@item.Value"
                               id="symptom_@item.Value" />
                        <label class="form-check-label" for="symptom_@item.Value">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
            <div>
                <label>Migraine with aura symptoms</label>
                @foreach (var item in (MultiSelectList)ViewBag.MigraineWithAura)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedSymptoms"
                               value="@item.Value"
                               id="symptom_@item.Value" />
                        <label class="form-check-label" for="symptom_@item.Value">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
            <div>
                <label>During attack symptoms</label>
                @foreach (var item in (MultiSelectList)ViewBag.DuringAttack)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedSymptoms"
                               value="@item.Value"
                               id="symptom_@item.Value" />
                        <label class="form-check-label" for="symptom_@item.Value">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
        }

        else if (conditionType == "Sinus")
        {
            <div>
                <label>Major symptoms</label>
                @foreach (var item in (MultiSelectList)ViewBag.Major)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedSymptoms"
                               value="@item.Value"
                               id="symptom_@item.Value" />
                        <label class="form-check-label" for="symptom_@item.Value">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
           
            <div>
                <label>Minor symptoms</label>
                @foreach (var item in (MultiSelectList)ViewBag.Minor)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedSymptoms"
                               value="@item.Value"
                               id="symptom_@item.Value" />
                        <label class="form-check-label" for="symptom_@item.Value">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
            }
        else if (conditionType == "Arthritis")
        {
            <div>
                @foreach (var item in (MultiSelectList)ViewBag.Symptoms)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedSymptoms"
                               value="@item.Value"
                               id="symptom_@item.Value" />
                        <label class="form-check-label" for="symptom_@item.Value">
                            @item.Text
                        </label>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No symptoms available for this health condition.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Selection</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
