@model HealthConditionForecast.Models.UserSymptomSelection

@{
    ViewData["Title"] = "Delete Symptom Selection";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-6 text-danger">🗑️ Delete Symptom Selection</h1>
        <p class="text-muted">Are you sure you want to delete this user's symptom selection?</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Selected Symptoms</h5>
            <dl class="row">
                <dt class="col-sm-3">🦴 Arthritis Symptoms</dt>
                <dd class="col-sm-9">
                    @if (Model.ArthritisSymptoms != null && Model.ArthritisSymptoms.Any())
                    {
                        @string.Join(", ", Model.ArthritisSymptoms.Select(s => s.Name))
                    }
                    else
                    {
                        <em class="text-muted">None</em>
                    }
                </dd>

                <dt class="col-sm-3">🧠 Migraine Symptoms</dt>
                <dd class="col-sm-9">
                    @if (Model.MigraineSymptoms != null && Model.MigraineSymptoms.Any())
                    {
                        @string.Join(", ", Model.MigraineSymptoms.Select(s => s.Name))
                    }
                    else
                    {
                        <em class="text-muted">None</em>
                    }
                </dd>

                <dt class="col-sm-3">😤 Sinus Symptoms</dt>
                <dd class="col-sm-9">
                    @if (Model.SinusSymptoms != null && Model.SinusSymptoms.Any())
                    {
                        @string.Join(", ", Model.SinusSymptoms.Select(s => s.Name))
                    }
                    else
                    {
                        <em class="text-muted">None</em>
                    }
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-danger me-2">🗑️ Confirm Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
