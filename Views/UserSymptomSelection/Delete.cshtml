@model HealthConditionForecast.Models.UserSymptomSelection

@{
    ViewData["Title"] = "Delete Symptom Selection";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Confirmation</h3>
                </div>
                <div class="card-body">
                    <h5 class="mb-4">Are you sure you want to delete this symptom selection?</h5>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Selection ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        @* You can add more details here if available *@
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">🗑️ Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
