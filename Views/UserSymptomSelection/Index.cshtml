@model IEnumerable<HealthConditionForecast.Models.UserSymptomSelection>

@{
    ViewData["Title"] = "User Symptom Selections";
}

<div class="container mt-5">
    <h1 class="mb-4">🩺 User Symptom Selections</h1>

    <table class="table table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>🦴 Arthritis Symptoms</th>
                <th>🧠 Migraine Symptoms</th>
                <th>😤 Sinus Symptoms</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ArthritisSymptoms?.Any() == true)
                        {
                            @string.Join(", ", item.ArthritisSymptoms.Select(s => s.Name))
                        }
                        else
                        {
                            <em class="text-muted">None</em>
                        }
                    </td>
                    <td>
                        @if (item.MigraineSymptoms?.Any() == true)
                        {
                            @string.Join(", ", item.MigraineSymptoms.Select(s => s.Name))
                        }
                        else
                        {
                            <em class="text-muted">None</em>
                        }
                    </td>
                    <td>
                        @if (item.SinusSymptoms?.Any() == true)
                        {
                            @string.Join(", ", item.SinusSymptoms.Select(s => s.Name))
                        }
                        else
                        {
                            <em class="text-muted">None</em>
                        }
                    </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">ℹ️ Details</a>
                            @if (User.IsInRole("Admin"))
                            {
                               <!--<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">✏️ Edit</a>-->
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">🗑️ Delete</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!--<div class="mt-4">
        <a asp-action="SelectSymptoms" class="btn btn-success btn-lg shadow-sm">➕ Create New Selection</a>
    </div>-->
</div>
