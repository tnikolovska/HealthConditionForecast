@model IEnumerable<HealthConditionForecast.Models.UserSymptomSelection>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "My Symptom Selections";
    var userEmail = User.Identity?.Name; // Assumes email is used as username
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<div class="container mt-5">
    <h1 class="mb-3">🩺 My Symptom Selections</h1>

    <div class="mb-4">
        <strong>User Email:</strong> <span class="text-primary">@userEmail</span>
    </div>

    <table id="symptomTable" class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>🦴 Arthritis Symptoms</th>
                <th>🧠 Migraine Symptoms</th>
                <th>😤 Sinus Symptoms</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ArthritisSymptoms?.Any() == true)
                        {
                            @string.Join(", ", item.ArthritisSymptoms.Select(s => s.Name))
                        }
                        else
                        {
                            <span class="text-muted"><em>None</em></span>
                        }
                    </td>
                    <td>
                        @if (item.MigraineSymptoms?.Any() == true)
                        {
                            @string.Join(", ", item.MigraineSymptoms.Select(s => s.Name))
                        }
                        else
                        {
                            <span class="text-muted"><em>None</em></span>
                        }
                    </td>
                    <td>
                        @if (item.SinusSymptoms?.Any() == true)
                        {
                            @string.Join(", ", item.SinusSymptoms.Select(s => s.Name))
                        }
                        else
                        {
                            <span class="text-muted"><em>None</em></span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">ℹ️ Details</a>
                        <!--<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">🗑️ Delete</a>-->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#symptomTable').DataTable({
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    search: "🔍 Search:",
                    lengthMenu: "Show _MENU_ entries per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ symptoms",
                    paginate: {
                        previous: "⏮️",
                        next: "⏭️"
                    }
                }
            });
        });
    </script>
}
