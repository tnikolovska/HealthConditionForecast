@model HealthConditionForecast.Models.UserSymptomSelection

@{
    ViewData["Title"] = "Symptom Selection Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-3 p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Selection ID:</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">User Health Condition ID:</dt>
        <dd class="col-sm-9">@Model.UserHealthConditionId</dd>
    </dl>

    @* Arthritis Symptoms *@
    @if (Model.ArthritisSymptoms != null && Model.ArthritisSymptoms.Any())
    {
        <h4>Arthritis Symptoms</h4>
        <ul>
            @foreach (var symptom in Model.ArthritisSymptoms)
            {
                <li>@symptom.Name</li>
            }
        </ul>
    }

    @* Migraine Symptoms *@
    @if (Model.MigraineSymptoms != null && Model.MigraineSymptoms.Any())
    {
        <h4>Migraine Symptoms</h4>
        <ul>
            @foreach (var symptom in Model.MigraineSymptoms)
            {
                <li>@symptom.Name (@symptom.Type)</li>
            }
        </ul>
    }

    @* Sinus Symptoms *@
    @if (Model.SinusSymptoms != null && Model.SinusSymptoms.Any())
    {
        <h4>Sinus Symptoms</h4>
        <ul>
            @foreach (var symptom in Model.SinusSymptoms)
            {
                <li>@symptom.Name (@symptom.Type)</li>
            }
        </ul>
    }
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
