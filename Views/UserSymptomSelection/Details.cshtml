@model HealthConditionForecast.Models.UserSymptomSelection

@{
    ViewData["Title"] = "Symptom Selection Details";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <!--<dt class="col-sm-4 text-muted">Selection ID:</dt>
                <dd class="col-sm-8 fw-semibold">@Model.Id</dd>-->

                <!--<dt class="col-sm-4 text-muted">User Health Condition ID:</dt>
                <dd class="col-sm-8 fw-semibold">@Model.UserHealthConditionId</dd>-->
            </dl>

            @if (Model.ArthritisSymptoms != null && Model.ArthritisSymptoms.Any())
            {
                <h5 class="mt-4">🦴 Arthritis Symptoms</h5>
                <ul class="list-group list-group-flush mb-3">
                    @foreach (var symptom in Model.ArthritisSymptoms)
                    {
                        <li class="list-group-item">@symptom.Name</li>
                    }
                </ul>
            }

            @if (Model.MigraineSymptoms != null && Model.MigraineSymptoms.Any())
            {
                <h5>🧠 Migraine Symptoms</h5>
                <ul class="list-group list-group-flush mb-3">
                    @foreach (var symptom in Model.MigraineSymptoms)
                    {
                        <li class="list-group-item">@symptom.Name <span class="text-muted">(@symptom.Type)</span></li>
                    }
                </ul>
            }

            @if (Model.SinusSymptoms != null && Model.SinusSymptoms.Any())
            {
                <h5>😤 Sinus Symptoms</h5>
                <ul class="list-group list-group-flush">
                    @foreach (var symptom in Model.SinusSymptoms)
                    {
                        <li class="list-group-item">@symptom.Name <span class="text-muted">(@symptom.Type)</span></li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="mt-4 d-flex gap-3">
        <!--<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg shadow-sm">✏️ Edit</a>-->
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">⬅️ Back to List</a>
    </div>
</div>
