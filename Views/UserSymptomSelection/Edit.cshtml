@model HealthConditionForecast.Models.UserSymptomSelection

@{
    ViewData["Title"] = "Edit Symptom Selection";
    var uhcId = ViewData["UserHealthConditionId"];
    var condition = ViewBag.userHealthConditionName as string;
}

<div class="container mt-5">
    <h1 class="mb-4">Edit Symptom Selection</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserHealthConditionId" value="@uhcId" />

        @if (condition == "Arthritis")
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">🦴 Arthritis Symptoms</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in (MultiSelectList)ViewBag.Symptoms)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedSymptoms"
                                   value="@item.Value" id="symptom_@item.Value" />
                            <label class="form-check-label" for="symptom_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }
                </div>
            </div>
        }

        @if (condition == "Migraine Headache")
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">🧠 Migraine Symptoms</h5>
                </div>
                <div class="card-body">
                    <h6>Before Headache</h6>
                    @foreach (var item in (MultiSelectList)ViewBag.BeforeHeadache)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedSymptoms"
                                   value="@item.Value" id="symptom_@item.Value" />
                            <label class="form-check-label" for="symptom_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }

                    <h6 class="mt-3">Migraine With Aura</h6>
                    @foreach (var item in (MultiSelectList)ViewBag.MigraineWithAura)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedSymptoms"
                                   value="@item.Value" id="symptom_@item.Value" />
                            <label class="form-check-label" for="symptom_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }

                    <h6 class="mt-3">During Attack</h6>
                    @foreach (var item in (MultiSelectList)ViewBag.DuringAttack)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedSymptoms"
                                   value="@item.Value" id="symptom_@item.Value" />
                            <label class="form-check-label" for="symptom_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }
                </div>
            </div>
        }

        @if (condition == "Sinus Headache")
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">😤 Sinus Symptoms</h5>
                </div>
                <div class="card-body">
                    <h6>Major</h6>
                    @foreach (var item in (MultiSelectList)ViewBag.Major)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedSymptoms"
                                   value="@item.Value" id="symptom_@item.Value" />
                            <label class="form-check-label" for="symptom_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }

                    <h6 class="mt-3">Minor</h6>
                    @foreach (var item in (MultiSelectList)ViewBag.Minor)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedSymptoms"
                                   value="@item.Value" id="symptom_@item.Value" />
                            <label class="form-check-label" for="symptom_@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary btn-lg shadow-sm px-4">💾 Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
