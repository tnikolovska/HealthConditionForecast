@* Views/Shared/_Layout.cshtml *@
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var userName = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Health Condition Forecast</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />


   



</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Health Forecast</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="healthDropdown" data-bs-toggle="dropdown">Health Conditions</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="HealthCondition" asp-action="Index">List</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="HealthCondition" asp-action="Create">Create</a></li>
                            }
                            
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="arthritisDropdown" data-bs-toggle="dropdown">Arthritis</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="ArthritisSymptom" asp-action="Index">Symptoms</a></li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="ArthritisSymptom" asp-action="Create">Create Symptom</a></li>
                            }
                            <li><a class="dropdown-item" asp-controller="UserHealthCondition" asp-action="Create">Forecast</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="migraineDropdown" data-bs-toggle="dropdown">Migraine</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="MigraineSymptom" asp-action="Index">Symptoms</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="MigraineSymptom" asp-action="Create">Create Symptom</a></li>
                            }
                            <li><a class="dropdown-item" asp-controller="UserHealthCondition" asp-action="Create">Forecast</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="sinusDropdown" data-bs-toggle="dropdown">Sinus</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="SinusSymptom" asp-action="Index">Symptoms</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="SinusSymptom" asp-action="Create">Create Symptom</a></li>
                            }
                            <li><a class="dropdown-item" asp-controller="UserHealthCondition" asp-action="Create">Forecast</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">User Management</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="UserHealthCondition" asp-action="Index">User Conditions</a></li>
                            <li><a class="dropdown-item" asp-controller="UserHealthCondition" asp-action="Create">Assign Health Condition</a></li>
                            <li><a class="dropdown-item" asp-controller="UserSymptomSelection" asp-action="Index">Symptom Selections</a></li>
                            
                        </ul>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="forecastDropdown" data-bs-toggle="dropdown">Forecast</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Forecast" asp-action="Index">Forecasts</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3">
        <small>&copy; 2025 Health Condition Forecast</small>
    </footer>

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

   <!-- <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>-->
    

    @RenderSection("Scripts", required: false)
</body>
</html>
