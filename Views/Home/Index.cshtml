@{
    ViewData["Title"] = "Welcome to Health Condition Forecast";
}

<div class="text-center mt-5">
    <h1 class="display-4">Personalized Health Forecasts</h1>
    <p class="lead">Track and forecast your symptoms for:</p>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Migraine Headache</h4>
                    <p class="card-text">Analyze triggers and predict upcoming migraine attacks.</p>
                    <a asp-controller="Forecast" asp-action="Migraine" class="btn btn-primary">View Forecast</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card border-success shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Sinus Headache</h4>
                    <p class="card-text">Monitor environmental factors and forecast sinus issues.</p>
                    <a asp-controller="Forecast" asp-action="Sinus" class="btn btn-success">View Forecast</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card border-danger shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Arthritis</h4>
                    <p class="card-text">Track pain levels and anticipate flare-ups based on weather and activity.</p>
                    <a asp-controller="Forecast" asp-action="Arthritis" class="btn btn-danger">View Forecast</a>
                </div>
            </div>
        </div>
    </div>
</div>
