@model IEnumerable<HealthConditionForecast.Models.ArthritisSymtom>

@{
    ViewData["Title"] = "Arthritis Symptoms";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">🦴 Arthritis Symptoms</h1>
        <p class="lead">Manage and review arthritis-related symptoms associated with user health data.</p>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success btn-lg">➕ Create New Arthritis Symptom</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Health Condition</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@ViewBag.HealthCondition</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
