@model HealthConditionForecast.Models.ArthritisSymtom

@{
    ViewData["Title"] = "Arthritis Symptom Details";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-info">🦴 Arthritis Symptom Details</h1>
        <p class="lead">Review information about the selected arthritis symptom.</p>
    </div>

    <div class="card shadow border-info mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">📋 Symptom Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-bold">Health Condition</dt>
                <dd class="col-sm-9">@ViewBag.HealthCondition</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
