@model HealthConditionForecast.Models.ArthritisSymtom

@{
    ViewData["Title"] = "Arthritis Symptom Details";
}

<h1>Arthritis Symptom Details</h1>

<div>
    <h4>Symptom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Health Condition</dt>
        <dd class="col-sm-10">@ViewBag.HealthCondition</dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
{
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
}
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
