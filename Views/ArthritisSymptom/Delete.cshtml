@model HealthConditionForecast.Models.ArthritisSymtom

@{
    ViewData["Title"] = "Delete Arthritis Symptom";
}

<h1>Delete Arthritis Symptom</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Symptom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Health Condition</dt>
        <dd class="col-sm-10">@ViewBag.HealthCondition</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
