@model HealthConditionForecast.Models.ArthritisSymtom

@{
    ViewData["Title"] = "Delete Arthritis Symptom";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-danger">🗑 Delete Arthritis Symptom</h1>
        <p class="lead">Are you sure you want to permanently remove this symptom?</p>
    </div>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">🦴 Symptom Details</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-bold">Health Condition</dt>
                <dd class="col-sm-9">@ViewBag.HealthCondition</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash-fill"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>
