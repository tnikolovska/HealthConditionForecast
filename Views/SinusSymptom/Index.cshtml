@model IEnumerable<HealthConditionForecast.Models.SinusSymptom>

@{
    ViewData["Title"] = "Sinus Symptoms";
}

<h1>Sinus Symptoms</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Sinus Symptom</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Health Condition</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Type</td>
                <td>@ViewBag.HealthCondition</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
