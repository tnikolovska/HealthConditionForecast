@model HealthConditionForecast.Models.SinusSymptom

@{
    ViewData["Title"] = "Delete Sinus Symptom";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <div>
                            <strong>Warning:</strong> This action <u>cannot</u> be undone. Are you sure you want to delete this sinus symptom?
                        </div>
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8 fs-5 fw-semibold">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 text-muted">Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4 text-muted">Health Condition</dt>
                        <dd class="col-sm-8">@ViewBag.HealthCondition</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            🗑️ Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

